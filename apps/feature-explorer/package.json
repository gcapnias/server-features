{
  "name": "@gcapnias/feature-explorer",
  "version": "0.0.0",
  "private": true,
  "bin": {
    "feature-explorer": "./dist/index.js"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=cjs --banner:js=\"#!/usr/bin/env node\" --external:term.js --external:pty.js --external:blessed --outfile=dist/index.js && node -e \"require('fs').chmodSync('dist/index.js', 0o755)\"",
    "dev": "pnpm build --watch",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "init-db": "node --loader tsx/esm src/init-test-db.ts"
  },
  "dependencies": {
    "@gcapnias/api-core": "workspace:*",
    "@gcapnias/shared-types": "workspace:*",
    "blessed": "^0.1.81"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.27",
    "@types/node": "^25.3.0",
    "esbuild": "^0.27.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
