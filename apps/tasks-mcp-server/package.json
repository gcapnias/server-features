{
  "name": "@gcapnias/tasks-mcp-server",
  "version": "0.0.0",
  "private": true,
  "bin": {
    "tasks-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=cjs --banner:js=\"#!/usr/bin/env node\" --outfile=dist/index.js && node -e \"require('fs').chmodSync('dist/index.js', 0o755)\"",
    "dev": "pnpm build --watch",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@gcapnias/api-core": "workspace:*",
    "@gcapnias/shared-types": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@types/express": "5.0.6",
    "express": "5.2.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
